{
  "name": "podra",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "lint:ts": "eslint src --fix",
    "lint:css": "stylelint './src/styles/*.css' --fix",
    "lint": "yarn lint:ts && yarn lint:css",
    "pretty": "prettier './src/**/*.{ts,tsx}' --write",
    "new:component": "hygen new component",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest --runInBand"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/scripts/setupTests.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/",
      "<rootDir>/src/components/SWReloadPrompt/SWReloadPrompt.test.tsx"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "react",
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": 2,
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "tabWidth": 4
  },
  "dependencies": {
    "@hookstate/core": "^3.0.11",
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "autosuggest-highlight": "^3.1.1",
    "axios": "^0.21.4",
    "firebase": "^9.0.2",
    "lodash": "^4.17.21",
    "material-ui-image": "^3.3.2",
    "oauth-1.0a": "^2.2.6",
    "puppeteer": "^10.2.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-router-dom": "^5.3.0",
    "react-window": "^1.8.6",
    "recharts": "^2.1.2",
    "snoowrap": "^1.23.0",
    "thenby": "^1.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@rollup/plugin-replace": "^3.0.0",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/cli": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@types/autosuggest-highlight": "^3.1.1",
    "@types/chrome": "^0.0.157",
    "@types/enzyme": "^3.10.9",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.9.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.8",
    "@types/react-window": "^1.8.5",
    "@types/testing-library__jest-dom": "^5.14.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "babel-loader": "^8.2.2",
    "enzyme": "^3.11.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "firebase-admin": "^9.11.1",
    "hygen": "^6.1.0",
    "jest": "^27.2.0",
    "jest-chrome": "^0.7.2",
    "prettier": "^2.4.0",
    "reflect-metadata": "^0.1.13",
    "storybook-builder-vite": "^0.0.12",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.3",
    "vite": "^2.5.4",
    "vite-plugin-pwa": "^0.11.2",
    "workbox-precaching": "^6.3.0",
    "workbox-window": "^6.3.0"
  }
}
